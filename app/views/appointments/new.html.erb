<h3>New Appointment</h3>

<%= form_for(@appointment) do |f| %>
  <label> Appointment Name:</label><br>
  <%= f.text_field :name%><br>
  <%= f.label :patient_id %>
  <%= f.collection_select :patient_id, Patient.all, :id, :name %>
  <br />

  <%= f.label :doctor_id %>
  <%= f.collection_select :doctor_id, Doctor.all, :id, :name %>
  <br />

  <%= f.submit %>
<% end %>
