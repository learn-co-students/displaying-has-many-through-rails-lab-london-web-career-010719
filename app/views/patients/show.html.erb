<h1> <%= @patient.name %> </h1>


<h3>Age: <b> <%= @patient.age %></b> </h3>

<h3> Appointments: </h3>
<table>
  <thead>
    <th>Date</th><th>Time</th><th>Patient</th>
  </thead>
  <tbody>

    <% @patient.appointments.each do |appointment| %>
      <tr>
        <td>
          <%= appointment.appointment_datetime.to_s[0..9] %>
        </td>
        <td>
          <%= appointment.appointment_datetime.to_s[10..18] %>
        </td>
        <td>
          <%= link_to appointment.doctor.name, doctor_path(appointment.doctor) %>
        </td>

      </tr>
    <% end %>

  </tbody>
</table>
