<h1> <%= @doctor.name %> </h1>


<h3>Department: <b> <%= @doctor.department %></b> </h3>

<table>
  <thead>
    <th>Date</th><th>Time</th><th>Patient</th>
  </thead>
  <tbody>

    <% @doctor.appointments.each do |appointment| %>
      <tr>
        <td>
          <%= appointment.appointment_datetime.to_s[0..9] %>
        </td>
        <td>
          <%= appointment.appointment_datetime.to_s[10..18] %>
        </td>
        <td>
          <%= link_to appointment.patient.name, patient_path(appointment.patient) %>
        </td>

      </tr>
    <% end %>

  </tbody>
</table>
